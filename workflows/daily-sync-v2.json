{
  "workflow_id": "daily-sync-v2",
  "name": "Daily Planning Product Sync (Workflow)",
  "description": "매일 products 테이블을 순회하며 6개 플랫폼에서 신규 상품 URL을 검색/등록하는 워크플로우",
  "version": "2.0.0",
  "defaults": {
    "platform": "default",
    "dry_run": false
  },
  "metadata": {
    "author": "Product Scanner Team",
    "created_at": "2025-12-11",
    "tags": ["daily", "sync", "planning", "product", "auto-crawl"]
  },
  "start_node": "init",
  "nodes": {
    "init": {
      "type": "daily_sync_init",
      "name": "Daily Sync 초기화",
      "config": {
        "output_dir": "/app/results"
      },
      "next_nodes": ["process_batch"],
      "timeout_ms": 60000
    },
    "process_batch": {
      "type": "daily_sync_batch",
      "name": "단일 처리",
      "config": {
        "dry_run": "${dry_run}",
        "max_per_platform": 10,
        "update_workflow_id": "extract-product-set-update-v2"
      },
      "next_nodes": [],
      "retry": {
        "max_attempts": 2,
        "backoff_ms": 5000
      },
      "timeout_ms": 600000
    }
  }
}
