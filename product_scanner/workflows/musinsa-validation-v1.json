{
  "workflow_id": "musinsa-validation-v1",
  "version": "1.0.0",
  "name": "Musinsa Product Validation",
  "description": "Supabase 상품을 Musinsa Playwright로 검증하고 비교 결과를 저장합니다",
  "metadata": {
    "author": "Product Scanner Team",
    "created_at": "2025-11-04",
    "tags": ["validation", "bulk", "musinsa"]
  },
  "defaults": {
    "limit": 1000,
    "link_url_pattern": "%musinsa.com%"
  },
  "start_node": "1",
  "nodes": {
    "1": {
      "type": "supabase_search",
      "name": "Search Products from Supabase",
      "config": {
        "link_url_pattern": "${link_url_pattern}",
        "sale_status": "${sale_status}",
        "limit": "${limit}"
      },
      "next_nodes": ["2"],
      "retry": {
        "max_attempts": 3,
        "backoff_ms": 1000
      },
      "timeout_ms": 30000
    },
    "2": {
      "type": "musinsa_validation",
      "name": "Validate with Musinsa Playwright",
      "config": {
        "strategy_id": "default",
        "concurrency": 8
      },
      "next_nodes": ["3"],
      "retry": {
        "max_attempts": 2,
        "backoff_ms": 2000
      },
      "timeout_ms": 60000
    },
    "3": {
      "type": "result_writer",
      "name": "Save Results to File",
      "config": {
        "output_dir": "/app/results",
        "format": "json",
        "pretty": true
      },
      "next_nodes": [],
      "retry": {
        "max_attempts": 3,
        "backoff_ms": 500
      },
      "timeout_ms": 10000
    }
  }
}
