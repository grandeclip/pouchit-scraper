{
  "workflow_id": "bulk-validation-v1",
  "name": "Bulk Product Validation",
  "version": "1.0.0",
  "description": "Supabase 상품을 Hwahae API로 검증하고 비교 결과를 저장합니다",
  "start_node": "1",
  "nodes": {
    "1": {
      "type": "supabase_search",
      "name": "Search Products from Supabase",
      "config": {
        "link_url_pattern": "${link_url_pattern}",
        "limit": "${limit}"
      },
      "next_node": "2",
      "retry": {
        "max_attempts": 3,
        "backoff_ms": 1000
      },
      "timeout_ms": 30000
    },
    "2": {
      "type": "hwahae_validation",
      "name": "Validate with Hwahae API",
      "config": {
        "strategy_id": "hwahae_api_v2",
        "concurrency": 1
      },
      "next_node": "3",
      "retry": {
        "max_attempts": 2,
        "backoff_ms": 2000
      },
      "timeout_ms": 60000
    },
    "3": {
      "type": "result_writer",
      "name": "Save Results to File",
      "config": {
        "output_dir": "/app/results",
        "format": "json",
        "pretty": true
      },
      "next_node": null,
      "retry": {
        "max_attempts": 3,
        "backoff_ms": 500
      },
      "timeout_ms": 10000
    }
  },
  "defaults": {
    "limit": 10,
    "link_url_pattern": "%hwahae.co.kr%"
  },
  "metadata": {
    "author": "Product Scanner Team",
    "created_at": "2025-01-29",
    "tags": ["validation", "bulk", "hwahae"]
  }
}
