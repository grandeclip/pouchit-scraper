{
  "defaults": {
    "limit": 1000,
    "link_url_pattern": "%hwahae.co.kr%"
  },
  "description": "Supabase 상품을 Hwahae API로 검증하고 비교 결과를 저장합니다",
  "metadata": {
    "author": "Product Scanner Team",
    "created_at": "2025-10-29",
    "tags": [
      "validation",
      "bulk",
      "hwahae"
    ]
  },
  "name": "Hwahae Product Validation",
  "nodes": {
    "1": {
      "config": {
        "limit": "${limit}",
        "link_url_pattern": "${link_url_pattern}",
        "sale_status": "${sale_status}"
      },
      "name": "Search Products from Supabase",
      "next_nodes": [
        "2"
      ],
      "retry": {
        "backoff_ms": 1000,
        "max_attempts": 3
      },
      "timeout_ms": 30000,
      "type": "supabase_search"
    },
    "2": {
      "config": {
        "concurrency": 1,
        "strategy_id": "hwahae_api_v2"
      },
      "name": "Validate with Hwahae API",
      "next_nodes": [
        "3"
      ],
      "retry": {
        "backoff_ms": 2000,
        "max_attempts": 2
      },
      "timeout_ms": 60000,
      "type": "hwahae_validation"
    },
    "3": {
      "config": {
        "format": "json",
        "output_dir": "/app/results",
        "pretty": true
      },
      "name": "Save Results to File",
      "next_nodes": [],
      "retry": {
        "backoff_ms": 500,
        "max_attempts": 3
      },
      "timeout_ms": 10000,
      "type": "result_writer"
    }
  },
  "start_node": "1",
  "version": "1.0.0",
  "workflow_id": "hwahae-validation-v1"
}